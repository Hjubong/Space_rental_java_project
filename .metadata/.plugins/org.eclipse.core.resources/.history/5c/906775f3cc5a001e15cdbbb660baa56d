package main;
import java.util.Scanner;
import java.util.regex.Pattern;

public class sign_up {
	
	    public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);
	        
	        String username;
	        String password;
	        String confirmPassword;
	        String phoneNumber;
	        String birthdate;
	        String name;
	        
	        // È¸¿ø Á¤º¸ ÀÔ·Â ¹Ş±â
	        while (true) {
	            System.out.print("¾ÆÀÌµğ¸¦ ÀÔ·ÂÇÏ¼¼¿ä (6-16ÀÚ, ¿µ¾î ¼Ò¹®ÀÚ¿Í ¼ıÀÚ¸¸ °¡´É): ");
	            username = scanner.nextLine();
	            
	            // ¾ÆÀÌµğ À¯È¿¼º °Ë»ç
	            if (isValidUsername(username)) {
	                break;
	            } else {
	                System.out.println("¿Ã¹Ù¸¥ Çü½ÄÀÇ ¾ÆÀÌµğ¸¦ ÀÔ·ÂÇÏ¼¼¿ä.");
	            }
	        }

	        
	        while (true) {
	            System.out.print("ºñ¹Ğ¹øÈ£¸¦ ÀÔ·ÂÇÏ¼¼¿ä (8-16ÀÚ, ¿µ¾î ´ë/¼Ò¹®ÀÚ, ¼ıÀÚ, Æ¯¼ö¹®ÀÚ Áß 2°¡Áö ÀÌ»ó Á¶ÇÕ ÇÊ¿ä): ");
	            password = scanner.nextLine();
	            
	            // ºñ¹Ğ¹øÈ£ À¯È¿¼º °Ë»ç
	            if (isValidPassword(password)) {
	                break;
	            } else {
	                System.out.println("¿Ã¹Ù¸¥ Çü½ÄÀÇ ºñ¹Ğ¹øÈ£¸¦ ÀÔ·ÂÇÏ¼¼¿ä.");
	            }
	        }

	        
	        do {
	            System.out.print("ºñ¹Ğ¹øÈ£¸¦ ´Ù½Ã ÀÔ·ÂÇÏ¼¼¿ä: ");
	            confirmPassword = scanner.nextLine();
	            
	            if (!confirmPassword.equals(password)) {
	                System.out.println("ºñ¹Ğ¹øÈ£°¡ ÀÏÄ¡ÇÏÁö ¾Ê½À´Ï´Ù. ´Ù½Ã ÀÔ·ÂÇÏ¼¼¿ä.");
	            }
	        } while (!confirmPassword.equals(password));

	        
	        while (true) {
	            System.out.print("ÀüÈ­¹øÈ£¸¦ ÀÔ·ÂÇÏ¼¼¿ä (010-XXXX-XXXX Çü½Ä): ");
	            phoneNumber = scanner.nextLine();
	            
	            // ÀüÈ­¹øÈ£ À¯È¿¼º °Ë»ç
	            if (isValidPhoneNumber(phoneNumber)) {
	                break;
	            } else {
	                System.out.println("¿Ã¹Ù¸¥ Çü½ÄÀÇ ÀüÈ­¹øÈ£¸¦ ÀÔ·ÂÇÏ¼¼¿ä.");
	            }
	        }

	        
	        while (true) {
	            System.out.print("»ı³â¿ùÀÏÀ» ÀÔ·ÂÇÏ¼¼¿ä (YYYYMMDD): ");
	            birthdate = scanner.nextLine();
	            
	            // »ı³â¿ùÀÏ À¯È¿¼º °Ë»ç
	            if (isValidBirthdate(birthdate)) {
	                break;
	            } else {
	                System.out.println("¿Ã¹Ù¸¥ Çü½ÄÀÇ »ı³â¿ùÀÏÀ» ÀÔ·ÂÇÏ¼¼¿ä.");
	            }
	        }

	       
	        while (true) {
	            System.out.print("ÀÌ¸§À» ÀÔ·ÂÇÏ¼¼¿ä (ÇÑ±Û ÀÌ¸§¸¸ °¡´É): ");
	            name = scanner.nextLine();
	            
	            // ÀÌ¸§ À¯È¿¼º °Ë»ç
	            if (isValidKoreanName(name)) {
	                break;
	            } else {
	                System.out.println("¿Ã¹Ù¸¥ Çü½ÄÀÇ ÀÌ¸§À» ÀÔ·ÂÇÏ¼¼¿ä.");
	            }
	        }

	        // ÀÔ·Â ¹ŞÀº Á¤º¸ Ãâ·ÂÇÏ¿© È®ÀÎ
	        System.out.println("\nÀÔ·ÂÇÑ È¸¿ø Á¤º¸:");
	        System.out.println("¾ÆÀÌµğ: " + username);
	        System.out.println("ºñ¹Ğ¹øÈ£: " + password);
	        System.out.println("ÀüÈ­¹øÈ£: " + phoneNumber);
	        System.out.println("»ı³â¿ùÀÏ: " + birthdate);
	        System.out.println("ÀÌ¸§: " + name);

	        scanner.close();
	    }

	    // ¾ÆÀÌµğ À¯È¿¼º °Ë»ç(6-16ÀÚ, ¿µ¾î ¼Ò¹®ÀÚ¿Í ¼ıÀÚ¸¸ °¡´É)
	    private static boolean isValidUsername(String username) {
	        String regex = "^[a-z0-9]{6,16}$";
	        return Pattern.matches(regex, username);
	    }

	    // ºñ¹Ğ¹øÈ£ À¯È¿¼º °Ë»ç(8-16ÀÚ, ¿µ¾î ´ë/¼Ò¹®ÀÚ, ¼ıÀÚ, Æ¯¼ö¹®ÀÚ Áß 2°¡Áö ÀÌ»ó Á¶ÇÕ ÇÊ¿ä)
	    private static boolean isValidPassword(String password) {
	        String regex = "^(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9])(?=.*[@#$%^&+=!]).{8,16}$";
	        return Pattern.matches(regex, password);
	    }

	    // ÀüÈ­¹øÈ£ À¯È¿¼º °Ë»ç(010-XXXX-XXXX Çü½Ä)
	    private static boolean isValidPhoneNumber(String phoneNumber) {
	        String regex = "^010-[0-9]{4}-[0-9]{4}$";
	        return Pattern.matches(regex, phoneNumber);
	    }

	    // »ı³â¿ùÀÏ À¯È¿¼º °Ë»ç(YYYYMMDD)
	    private static boolean isValidBirthdate(String birthdate) {
	        String regex = "^[0-9]{8}$";
	        return Pattern.matches(regex, birthdate);
	    }

	    // ÀÌ¸§ À¯È¿¼º °Ë»ç(ÇÑ±Û ÀÌ¸§¸¸ Çã¿ë)
	    private static boolean isValidKoreanName(String name) {
	        String regex = "^[°¡-ÆR]*$";
	        return Pattern.matches(regex, name);
	    }
	

}
