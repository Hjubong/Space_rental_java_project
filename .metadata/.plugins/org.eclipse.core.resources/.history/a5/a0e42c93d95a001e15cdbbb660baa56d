package main;
import java.util.Scanner;
import java.util.regex.Pattern;

public class sign_up {
	
	    public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);
	        
	        String username;
	        String password;
	        String confirmPassword;
	        String phoneNumber;
	        String birthdate;
	        String name;
	        
	        // ȸ�� ���� �Է� �ޱ�
	        while (true) {
	            System.out.print("���̵� �Է��ϼ��� (6-16��, ���� �ҹ��ڿ� ���ڸ� ����): ");
	            username = scanner.nextLine();
	            
	            // ���̵� ��ȿ�� �˻�
	            if (isValidUsername(username)) {
	                break;
	            } else {
	                System.out.println("�ùٸ� ������ ���̵� �Է��ϼ���.");
	            }
	        }

	        
	        while (true) {
	            System.out.print("��й�ȣ�� �Է��ϼ��� (8-16��, ���� ��/�ҹ���, ����, Ư������ �� 2���� �̻� ���� �ʿ�): ");
	            password = scanner.nextLine();
	            
	            // ��й�ȣ ��ȿ�� �˻�
	            if (isValidPassword(password)) {
	                break;
	            } else {
	                System.out.println("�ùٸ� ������ ��й�ȣ�� �Է��ϼ���.");
	            }
	        }

	        
	        do {
	            System.out.print("��й�ȣ�� �ٽ� �Է��ϼ���: ");
	            confirmPassword = scanner.nextLine();
	            
	            if (!confirmPassword.equals(password)) {
	                System.out.println("��й�ȣ�� ��ġ���� �ʽ��ϴ�. �ٽ� �Է��ϼ���.");
	            }
	        } while (!confirmPassword.equals(password));

	        
	        while (true) {
	            System.out.print("��ȭ��ȣ�� �Է��ϼ��� (010-XXXX-XXXX ����): ");
	            phoneNumber = scanner.nextLine();
	            
	            // ��ȭ��ȣ ��ȿ�� �˻�
	            if (isValidPhoneNumber(phoneNumber)) {
	                break;
	            } else {
	                System.out.println("�ùٸ� ������ ��ȭ��ȣ�� �Է��ϼ���.");
	            }
	        }

	        
	        while (true) {
	            System.out.print("��������� �Է��ϼ��� (YYYYMMDD): ");
	            birthdate = scanner.nextLine();
	            
	            // ������� ��ȿ�� �˻�
	            if (isValidBirthdate(birthdate)) {
	                break;
	            } else {
	                System.out.println("�ùٸ� ������ ��������� �Է��ϼ���.");
	            }
	        }

	       
	        while (true) {
	            System.out.print("�̸��� �Է��ϼ��� (�ѱ� �̸��� ����): ");
	            name = scanner.nextLine();
	            
	            // �̸� ��ȿ�� �˻�
	            if (isValidKoreanName(name)) {
	                break;
	            } else {
	                System.out.println("�ùٸ� ������ �̸��� �Է��ϼ���.");
	            }
	        }

	        // �Է� ���� ���� ����Ͽ� Ȯ��
	        System.out.println("\n�Է��� ȸ�� ����:");
	        System.out.println("���̵�: " + username);
	        System.out.println("��й�ȣ: " + password);
	        System.out.println("��ȭ��ȣ: " + phoneNumber);
	        System.out.println("�������: " + birthdate);
	        System.out.println("�̸�: " + name);

	        scanner.close();
	    }

	    // ���̵� ��ȿ�� �˻�(6-16��, ���� �ҹ��ڿ� ���ڸ� ����)
	    private static boolean isValidUsername(String username) {
	        String regex = "^[a-z0-9]{6,16}$";
	        return Pattern.matches(regex, username);
	    }

	    // ��й�ȣ ��ȿ�� �˻�(8-16��, ���� ��/�ҹ���, ����, Ư������ ����)
	    private static boolean isValidPassword(String password) {
	    	String regex = "^(?=(.*[A-Z]){0,1})(?=(.*[a-z]){0,1})(?=(.*[0-9]){0,1})(?=(.*[@$%^&+=!]){0,1}).{8,16}$";
	        return Pattern.matches(regex, password);
	    }

	    // ��ȭ��ȣ ��ȿ�� �˻�(010-XXXX-XXXX ����)
	    private static boolean isValidPhoneNumber(String phoneNumber) {
	        String regex = "^010-[0-9]{4}-[0-9]{4}$";
	        return Pattern.matches(regex, phoneNumber);
	    }

	    // ������� ��ȿ�� �˻�(YYYYMMDD)
	    private static boolean isValidBirthdate(String birthdate) {
	        String regex = "^[0-9]{8}$";
	        return Pattern.matches(regex, birthdate);
	    }

	    // �̸� ��ȿ�� �˻�(�ѱ� �̸��� ���)
	    private static boolean isValidKoreanName(String name) {
	        String regex = "^[��-�R]*$";
	        return Pattern.matches(regex, name);
	    }
	
}
